---
// Highlights Section
// ------------
// Description: A section with a multiple text and image rows.

// Components
// - UI
import TextImage from '../basic/TextImage.astro'

// Content
import highlight01 from '../../../assets/highlights/highlight-01.svg'
import highlight01mobile from '../../../assets/highlights/highlight-01-mobile.svg'
import highlight02 from '../../../assets/highlights/highlight-02.svg'
import highlight02mobile from '../../../assets/highlights/highlight-02-mobile.svg'
import highlight03 from '../../../assets/highlights/highlight-03.svg'
import highlight03mobile from '../../../assets/highlights/highlight-03-mobile.svg'
import highlight04 from '../../../assets/highlights/highlight-04.svg'
import highlight04mobile from '../../../assets/highlights/highlight-04-mobile.svg'

type HighlightBlock = {
	title: string
	text: string
	image: any
	mobileImage?: any
	imageWidth: number
	imageHeight: number
	imagePosition: 'left' | 'right'
}
const highlightBlocks: HighlightBlock[] = [
	{
		title: 'Boost Your <strong>Email List</strong>',
		text: 'Grow your email subscriber base effortlessly with BaroBite. Our captive portal solution turns your Wi-Fi into a powerful lead generation tool, capturing valuable customer data while providing seamless internet access.',
			image: highlight01,
			imageWidth: highlight01.width,
			imageHeight: highlight01.height,
			mobileImage: highlight01mobile,
			imagePosition: 'right'
	},
	{
		title: 'Increase <strong>Social Media</strong> Followers',
		text: 'Expand your social media presence organically. BaroBite encourages users to follow your business on various platforms in exchange for Wi-Fi access, amplifying your online reach and engagement.',
		image: highlight02,
		mobileImage: highlight02mobile,
		imageWidth: highlight02.width,
		imageHeight: highlight02.height,
		imagePosition: 'left'
	},
	{
		title: '<strong>Personalized</strong> Customer Insights',
		text: 'Gain valuable insights into your customers\' behavior and preferences. AiWifi collects and analyzes data to help you tailor your marketing strategies, improve customer experience, and drive business growth.',
		image: highlight03,
		mobileImage: highlight03mobile,
		imageWidth: highlight03.width,
		imageHeight: highlight03.height,
		imagePosition: 'right'
	},
	{
		title: 'Seamless <strong>Integration</strong>',
		text: 'Effortlessly integrate AiWifi with your existing systems. Our solution works with various Wi-Fi setups and marketing tools, ensuring a smooth implementation that enhances your current business operations without disruption.',
		image: highlight04,
		mobileImage: highlight04mobile,
		imageWidth: highlight04.width,
		imageHeight: highlight04.height,
		imagePosition: 'left'
	}
]
---

{
	highlightBlocks.map((highlight, key) => (
		<TextImage
			id={`highlight-${key}`}
			title={highlight.title}
			text={highlight.text}
			image={highlight.image}
			imageWidth={highlight.imageWidth}
			imageHeight={highlight.imageHeight}
			mobileImage={highlight.mobileImage}
			imagePosition={highlight.imagePosition}
			classes={key === 0 ? '!pb-0' : key === highlightBlocks.length - 1 ? '!pt-0' : '!py-0'}
		/>
	))
}
