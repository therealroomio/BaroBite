---
// Social Proof Section
// ------------
// Description: A section with logos of social media platforms to enchance the trust of the users.

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import { Image } from 'astro:assets'

// Content
import bostonpizza from '../../../assets/logos/bostonpizza-logo.svg'
import shinobi from '../../../assets/logos/shinobi-logo.svg'
import nobu from '../../../assets/logos/nobu-logo.svg'

const images = [
	{
		image: bostonpizza,
		alt: 'Boston Pizza logo'
	},
	{
		image: shinobi,
		alt: 'Shinobi logo'
	},
	{
		image: nobu,
		alt: 'Nobu logo'
	}
]

// Props
type Props = {
	classes?: string
}
const { classes } = Astro.props
---

<Section padding="bottom" classes={classes}>
	<Row>
		<Col span="12" align="center">
			<h2 class="!mb-6 text-base font-normal text-neutral-400 dark:text-neutral-600">
				Trusted by <strong class="highlight">250+ </strong>local businesses
			</h2></Col
		>
	</Row>
	<Row flex classes="!flex-row">
		{
			images.map((item) => (
				<Col>
					<Image src={item.image} alt={item.alt} />
				</Col>
			))
		}
	</Row>
</Section>
