---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Feature from '../components/blocks/features/FeatureSticky.astro'
import Hero from '../components/blocks/hero/PageHeader.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'

// Data
import featuresData from '../data/json-files/featuresData.json'
// - Feature Categories
const featuresAIMarketing = featuresData.filter((feature) => feature.category === 'AI Marketing')
const featuresSocialGrowth = featuresData.filter((feature) => feature.category === 'Social Growth')
const featuresEmailAutomation = featuresData.filter((feature) => feature.category === 'Email Automation')
const featuresAnalytics = featuresData.filter((feature) => feature.category === 'Analytics')
const featuresIntegrations = featuresData.filter((feature) => feature.category === 'Integrations')

// Import the config
import { configData } from '../config/config';

// Content
// - SEO
const SEO = {
	title: `${configData.siteTitle} | AI-Powered Marketing Automation Features`,
	description: 'Discover how AiWifi\'s AI-powered features can revolutionize your marketing, social media growth, and email automation.'
}
// - Page Header
const header = {
	title: 'Supercharge your marketing with <strong>AI-powered</strong> automation.',
	text: 'Explore our cutting-edge features designed to boost your digital presence and drive customer engagement.'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<Feature
		title="AI-Driven Marketing"
		text="Leverage the power of AI to optimize your marketing strategies and campaigns."
		data={featuresAIMarketing}
	/>
	<Feature
		title="Social Media Growth"
		text="Expand your social media presence and engage with your audience more effectively."
		data={featuresSocialGrowth}
		classes="bg-neutral-50 dark:bg-neutral-900"
	/>
	<Feature
		title="Email Automation"
		text="Create personalized email campaigns that convert with our AI-powered email automation."
		data={featuresEmailAutomation}
	/>
	<Feature
		title="Advanced Analytics"
		text="Gain deep insights into your marketing performance with our comprehensive analytics tools."
		data={featuresAnalytics}
		classes="bg-neutral-50 dark:bg-neutral-900"
	/>
	<Feature
		title="Seamless Integrations"
		text="Connect AiWifi with your favorite tools and platforms for a streamlined workflow."
		data={featuresIntegrations}
	/>
	<CTA />
</Layout>
