---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/PageHeader.astro'
import FAQ from '../components/blocks/FAQ/FaqSticky.astro'
import TextImage from '../components/blocks/basic/TextImage.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'
import Basic from '../components/blocks/FAQ/Basic.astro'

// Data
import faqData from '../data/json-files/faqData.json'
// - FAQ Categories
const faqAIMarketing = faqData.filter((faq) => faq.category === 'ai-marketing')
const faqSocialGrowth = faqData.filter((faq) => faq.category === 'social-growth')
const faqEmailAutomation = faqData.filter((faq) => faq.category === 'email-automation')
// Content
import faqImage1 from '../assets/faq/faq-01.png'
// - SEO
// Import the config
import { configData } from '../config/config';


const SEO = {
	title: `${configData.siteTitle} | Frequently Asked Questions`,
	description: 'Get answers to common questions about AiWifi\'s AI-powered marketing automation platform.'
}
// - Page Header
const header = {
	title: 'Get Answers to Your <strong>AiWifi</strong> Questions',
	text: 'Find answers to common questions about our AI-powered marketing automation platform.'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<FAQ
		title="AI-Driven Marketing"
		text="Learn how our AI technology optimizes your marketing strategies and campaigns."
		data={faqAIMarketing}
	/>
	<TextImage
		title="Boost Your Social Media Presence"
		text="Discover how AiWifi's AI-powered tools can help you grow your social media following and engagement."
		image={faqImage1}
		mobileImage={faqImage1}
		imagePosition="left"
		offsetImage
		classes="bg-neutral-50 dark:bg-neutral-900 lg:!py-64"
	/>
	<FAQ
		title="Email Automation Made Easy"
		text="Explore how our AI-driven email automation can improve your email marketing campaigns and boost conversions."
		data={faqEmailAutomation}
	/>
	<CTA />
	<Basic />
</Layout>
