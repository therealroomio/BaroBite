---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/PageHeader.astro'
import SimpleFeed from '../components/blocks/feeds/BasicFeed.astro'
import CTA from '../components/blocks/CTA/BasicLight.astro'

// Data
import feedData from '../data/json-files/changelogData.json'

// Import the config
import { configData } from '../config/config';

// Content
// - SEO
const SEO = {
	title: `${configData.siteTitle} | Product Updates and Improvements`,
	description: 'Stay informed about the latest updates and enhancements to BaroBite\'s AI-powered marketing automation platform.'
}
// - Page Header
const header = {
	title: 'BaroBite Updates and <strong>Enhancements</strong>',
	text: 'Stay up-to-date with the latest improvements to our AI-powered marketing automation platform.'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<SimpleFeed data={feedData} />
	<CTA />
</Layout>
