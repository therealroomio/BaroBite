---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import FormHero from '../components/blocks/hero/ContactHero.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'
import ContactCards from '../components/blocks/contact/ContactCards.astro'
import SocialProof from '../components/blocks/socialproof/Basic.astro'

// Content
// - SEO
const SEO = {
	title: 'BaroBite | Get in Touch with Our AI Marketing Experts',
	description:
		'Have questions about our AI-powered marketing automation platform? Contact BaroBite today for support, inquiries, or to schedule a demo. Our team is here to help you optimize your marketing efforts.'
}
// - Page Header
const header = {
	title: 'Get in Touch with <strong>BaroBite</strong> Experts',
	text: "Whether you have questions about our AI-powered marketing automation, need support, or want to schedule a demo, we're here to help. Reach out to us, and we'll get back to you promptly."
}
---

<Layout title={SEO.title} description={SEO.description}>
	<FormHero
		title={header.title}
		text={header.text}
		id="contact"
		classes="bg-neutral-50 dark:bg-neutral-950/80"
	/>
	<ContactCards classes="dark:bg-neutral-950/80" />
	<SocialProof classes="dark:bg-neutral-950/80" />
	<CTA />
</Layout>
