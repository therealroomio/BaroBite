---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import SidebarContent from '../components/blocks/basic/StickySidebar.astro'
import Hero from '../components/blocks/hero/PageHeader.astro'

// Import the config
import { configData } from '../config/config';

// Content
// - SEO
const SEO = {
	title: `${configData.siteTitle} | Terms of Service`,
	description: 'Read and understand BaroBite\'s terms of service for our AI-powered marketing automation platform.'
}
// - Page Header
const header = {
	title: 'Terms and Conditions: Your Guide to Using <strong>BaroBite</strong>',
	text: 'Please read our terms carefully to understand your rights and responsibilities when using our AI-powered marketing automation platform.'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<SidebarContent>
		<div slot="sidebar">
			<h3>Introduction</h3>
			<p>
				Please take a moment to read through these terms to understand your rights and
				responsibilities while using our AI-powered marketing automation services.
			</p>
		</div>
		<div class="basic-text">
			<h4>Welcome to BaroBite</h4>
			<p>
				Welcome to BaroBite! We're excited to have you on board. Our AI-powered marketing automation platform is designed to help you optimize your marketing strategies, grow your social media presence, and improve your email campaigns. By using BaroBite, you are agreeing to these terms and conditions, so please read them carefully.
			</p>
			<p>
				Your satisfaction is important to us. If you have any questions or concerns about these
				terms, please don't hesitate to contact our support team. We're here to assist you and ensure you have a great experience with BaroBite.
			</p>
			<!-- Add more terms and conditions specific to BaroBite's services -->
		</div>
	</SidebarContent>
</Layout>